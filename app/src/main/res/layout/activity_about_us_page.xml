<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsPage">


    <TextView
        android:id="@+id/tvProPrice"

        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="42dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="10dp"
        android:text="Our goal in creating this &quot;HandyCraft.LK&quot; mobile application is to offer high-quality goods to clients. Self - employed individuals will be able to grow their small enterprises globally thanks to this application. Due to its success on the international market, it will indirectly aid the current economic crisis by bringing funds into the country. "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBackTool" />

    <ImageView
        android:id="@+id/btnBackTool"
        android:layout_width="122dp"
        android:layout_height="124dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="145dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_2023_03_19_22_56_38" />

    <Button
        android:id="@+id/btnGetStart"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="62dp"
        android:backgroundTint="@color/btnYellow"
        android:onClick="btnGetStart"
        android:text="@string/Letsstart"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>